{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Bank Management System",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "Account.cpp",
                "BankOperations.cpp",
                "-o",
                "BankApp.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiling multi-file C++ project for Bank Management System"
        }
    ]
}
